{
    "$schema": "http://json.schemastore.org/package",
    "name": "@kayahr/better-jest",
    "version": "1.0.4",
    "description": "Jest wrapper to start jest with exposed garbage collector and options from JEST_OPTS environment variable",
    "keywords": [
        "jest",
        "environment",
        "gc"
    ],
    "license": "MIT",
    "repository": "github:kayahr/better-jest",
    "publishConfig": {
        "access": "public"
    },
    "author": {
        "name": "Klaus Reimer",
        "email": "k@ailis.de"
    },
    "scripts": {
        "clean": "rimraf lib coverage doc/api",
        "compile": "tsc",
        "watch": "tsc -w",
        "check": "cross-env JEST_OPTS=\"--globals {\\\"jestOptsPresent\\\":\\\"Yes\\\"}\" bin/better-jest",
        "lint": "eslint --max-warnings 0 --ext .ts src",
        "cspell": "cspell --no-progress",
        "prepare": "npm run clean && npm run compile",
        "test": "npm run cspell && npm run lint && npm run -s check"
    },
    "bin": {
        "better-jest": "bin/better-jest"
    },
    "files": [
        "lib/main/",
        "src/main/"
    ],
    "funding": {
        "url": "https://github.com/kayahr/better-jest?sponsor=1"
    },
    "jest": {
        "projects": [
            {
                "displayName": "node",
                "testMatch": [
                    "<rootDir>/lib/test/**/*.test.js"
                ]
            },
            {
                "displayName": "electron",
                "runner": "@kayahr/jest-electron-runner/main",
                "testMatch": [
                    "<rootDir>/lib/test/**/*.test.js"
                ],
                "testEnvironmentOptions": {
                    "electron": {
                        "options": [
                            "js-flags=--expose-gc"
                        ]
                    }
                }
            }
        ],
        "collectCoverageFrom": [
            "<rootDir>/lib/main/**/*.js"
        ]
    },
    "devDependencies": {
        "@kayahr/eslint-config": "2.6.0",
        "@kayahr/jest-electron-runner": "29.3.1",
        "@types/jest": "29.4.0",
        "@types/node": "18.11.18",
        "@typescript-eslint/eslint-plugin": "5.50.0",
        "@typescript-eslint/parser": "5.50.0",
        "cross-env": "7.0.3",
        "cspell": "6.21.0",
        "eslint": "8.33.0",
        "eslint-plugin-deprecation": "1.3.3",
        "eslint-plugin-simple-import-sort": "10.0.0",
        "jest": "29.4.1",
        "rimraf": "4.1.2",
        "source-map-support": "0.5.21",
        "typescript": "4.9.5"
    },
    "dependencies": {
        "tslib": "^2.5.0"
    },
    "peerDependencies": {
        "jest": ">=27"
    }
}
