{
    "$schema": "http://json.schemastore.org/package",
    "name": "@kayahr/better-jest",
    "version": "1.0.2",
    "description": "Jest wrapper to start jest with exposed garbage collector and options from JEST_OPTS environment variable",
    "keywords": [
        "jest",
        "environment",
        "gc"
    ],
    "license": "MIT",
    "repository": "github:kayahr/better-jest",
    "publishConfig": {
        "access": "public"
    },
    "author": {
        "name": "Klaus Reimer",
        "email": "k@ailis.de"
    },
    "scripts": {
        "clean": "rimraf lib coverage doc/api",
        "compile": "tsc",
        "watch": "tsc -w",
        "check": "cross-env JEST_OPTS=\"--globals {\\\"jestOptsPresent\\\":\\\"Yes\\\"}\" bin/better-jest",
        "lint": "eslint --max-warnings 0 --ext .ts src",
        "cspell": "cspell --no-progress",
        "prepare": "npm run clean && npm run compile",
        "test": "npm run cspell && npm run lint && npm run -s check"
    },
    "bin": {
        "better-jest": "bin/better-jest"
    },
    "files": [
        "lib/main/",
        "src/main/"
    ],
    "funding": {
        "url": "https://github.com/kayahr/better-jest?sponsor=1"
    },
    "jest": {
        "projects": [
            {
                "displayName": "node",
                "testMatch": [
                    "<rootDir>/lib/test/**/*.test.js"
                ]
            },
            {
                "displayName": "electron",
                "runner": "@kayahr/jest-electron-runner/main",
                "testMatch": [
                    "<rootDir>/lib/test/**/*.test.js"
                ]
            }
        ],
        "collectCoverageFrom": [
            "<rootDir>/lib/main/**/*.js"
        ]
    },
    "devDependencies": {
        "@kayahr/eslint-config": "2.1.0",
        "@kayahr/jest-electron-runner": "4.4.1",
        "@types/jest": "27.4.1",
        "@types/node": "17.0.21",
        "@typescript-eslint/eslint-plugin": "5.12.1",
        "@typescript-eslint/parser": "5.12.1",
        "cross-env": "7.0.3",
        "cspell": "5.18.5",
        "eslint": "8.10.0",
        "eslint-plugin-deprecation": "1.3.2",
        "eslint-plugin-simple-import-sort": "7.0.0",
        "jest": "27.5.1",
        "rimraf": "3.0.2",
        "source-map-support": "0.5.21",
        "typescript": "4.5.5"
    },
    "dependencies": {
        "tslib": "^2.3.1"
    },
    "peerDependencies": {
        "jest": ">=27"
    }
}
