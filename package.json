{
  "$schema": "http://json.schemastore.org/package",
  "name": "@kayahr/better-jest",
  "version": "1.2.1",
  "description": "Jest wrapper to start jest with exposed garbage collector and options from JEST_OPTS environment variable",
  "keywords": [
    "jest",
    "environment",
    "gc"
  ],
  "license": "MIT",
  "repository": "github:kayahr/better-jest",
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "Klaus Reimer",
    "email": "k@ailis.de"
  },
  "scripts": {
    "prepare": "run-s clean build",
    "clean": "rimraf lib",
    "build": "run-s build:*",
    "build:compile": "tsc",
    "test": "run-s test:*",
    "test:unit": "cross-env JEST_OPTS=\"--globals {\\\"jestOptsPresent\\\":\\\"Yes\\\"}\" bin/better-jest --colors",
    "test:lint": "eslint --max-warnings 0 --ext .ts src",
    "test:spell": "cspell --no-progress"
  },
  "bin": {
    "better-jest": "bin/better-jest"
  },
  "files": [
    "lib/main/",
    "src/main/"
  ],
  "funding": {
    "url": "https://github.com/kayahr/better-jest?sponsor=1"
  },
  "devDependencies": {
    "@kayahr/eslint-config": "2.11.0",
    "@kayahr/jest-electron-runner": "29.13.0",
    "@types/jest": "29.5.12",
    "@types/node": "20.12.12",
    "@typescript-eslint/eslint-plugin": "7.10.0",
    "@typescript-eslint/parser": "7.10.0",
    "cross-env": "7.0.3",
    "cspell": "8.8.2",
    "eslint": "8.57.0",
    "eslint-plugin-deprecation": "2.0.0",
    "eslint-plugin-simple-import-sort": "12.1.0",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "npm-run-all": "4.1.5",
    "rimraf": "5.0.7",
    "source-map-support": "0.5.21",
    "typescript": "5.4.5"
  },
  "dependencies": {
    "tslib": "^2.6.2"
  },
  "peerDependencies": {
    "jest": ">=27"
  }
}
